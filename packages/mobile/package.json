{
  "name": "@notable/mobile",
  "version": "1.0.0",
  "description": "Notable mobile application built with React Native/Expo",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "echo 'Mobile build temporarily disabled - see Issue #14'",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "jest",
    "e2e": "echo 'E2E tests for mobile'",
    "clean": "rm -rf .expo dist",
    "dev": "expo start --dev-client"
  },
  "dependencies": {
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/stack": "^7.0.10",
    "expo": "~52.0.0",
    "react": "^19",
    "react-native": "0.76.6",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "~4.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "babel-jest": "^30.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "jest-expo": "^53.0.9",
    "typescript": "^5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-react",
            "@babel/preset-typescript"
          ]
        }
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/?(*.)(test|spec).(js|jsx|ts|tsx)"
    ],
    "collectCoverage": false,
    "verbose": true
  }
}
