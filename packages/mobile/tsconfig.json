{
  "extends": ["expo/tsconfig.base", "../configs/tsconfig/react-native.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/types": ["types"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
