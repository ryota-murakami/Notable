{
  "extends": ["expo/tsconfig.base", "../configs/tsconfig/react-native.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/types": ["../../types/index"]
