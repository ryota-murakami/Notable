{
  "extends": ["expo/tsconfig.base", "../configs/tsconfig/react-native.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./*"],
      "@/types": ["types"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["e2e/**/*"]
}
