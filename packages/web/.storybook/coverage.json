{
  "include": ["design-system/components/**/*.tsx", "components/ui/**/*.tsx"],
  "exclude": ["**/*.stories.tsx", "**/*.test.tsx", "**/*.spec.tsx", "**/*.d.ts", "node_modules/**"],
  "reporter": ["text", "lcov", "html", "json-summary"],
  "all": true,
  "clean": true,
  "check-coverage": true,
  "lines": 100,
  "statements": 100,
  "functions": 100,
  "branches": 100,
  "watermarks": {
    "lines": [80, 100],
    "functions": [80, 100],
    "branches": [80, 100],
    "statements": [80, 100]
  }
}
