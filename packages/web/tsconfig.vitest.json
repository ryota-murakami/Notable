{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "jsx": "react-jsx"
  },
  "include": [
    "**/__tests__/**/*.{test,spec}.{ts,tsx}",
    "**/?(*.){test,spec}.{ts,tsx}",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "e2e/**",
    "tests/e2e/**",
    "**/*.e2e.*"
  ]
}