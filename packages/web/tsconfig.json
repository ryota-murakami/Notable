{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/store/*": ["./store/*"],
      "@/types": ["./types/index.ts"],
      "@/types/*": ["./types/*"],
      "@/server/*": ["./server/*"],
      "@/app/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "out/types/**/*.ts",
    "server/**/*.ts",
    "types/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "e2e/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "out", ".next"]
}
