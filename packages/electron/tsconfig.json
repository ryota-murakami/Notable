{
  "extends": "../configs/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node"],
    "outDir": "./build",
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", "../../types/**/*"],
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__"
  ]
}
