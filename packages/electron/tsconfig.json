{
  "extends": "../configs/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./build",
    "noEmit": false,
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../../types/**/*"],
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__"
  ]
}
