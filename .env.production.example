# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Next.js
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NEXT_PUBLIC_APP_NAME="Notable"
NEXT_PUBLIC_APP_DESCRIPTION="A premium note-taking app with superior writing experience"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Authentication
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@your-domain.com

# File Storage (Uploadthing)
UPLOADTHING_SECRET=your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id
VERCEL_SPEED_INSIGHTS_ID=your-speed-insights-id

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Redis (for caching and rate limiting)
REDIS_URL=redis://default:your-password@your-redis-host:6379

# OpenTelemetry
OTEL_SERVICE_NAME=notable-production
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-endpoint
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer your-token

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=false

# API Keys
API_SECRET_KEY=your-secret-api-key
WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Deployment
VERCEL_GIT_COMMIT_SHA=auto
VERCEL_GIT_COMMIT_MESSAGE=auto
VERCEL_GIT_COMMIT_AUTHOR_NAME=auto

# Edge Config (for feature flags and rollbacks)
EDGE_CONFIG=your-edge-config-url
EDGE_CONFIG_ITEM_KEY=notable-config

# Security
NEXT_PUBLIC_CSP_REPORT_URI=https://your-csp-report-endpoint
SECURITY_HEADERS_REPORT_ONLY=false

# Logging
LOG_DIR=./logs
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Health Checks and Alerts
METRICS_AUTH_TOKEN=your-metrics-auth-token
ALERTMANAGER_WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL=alerts@your-domain.com