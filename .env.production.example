# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Next.js
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app-url.com"
NEXT_PUBLIC_SITE_URL="https://your-app-url.com"
NEXT_PUBLIC_APP_NAME="Notable"
NEXT_PUBLIC_APP_DESCRIPTION="No AI note-taking app with superior writing experience"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_JWT_SECRET="your-jwt-secret"
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Authentication
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
JWT_SECRET="your-jwt-secret"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="your-email-from"

# File Storage (Uploadthing)
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# AI Features
OPENAI_API_KEY="your-openai-api-key"

# Redis (for caching and rate limiting)
REDIS_URL="redis://default:your-password@your-redis-host:6379"

# Monitoring & Error Tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
VERCEL_SPEED_INSIGHTS_ID="your-speed-insights-id"

# Alerts & Notifications
SLACK_WEBHOOK_URL="your-slack-webhook-url"
ALERT_EMAIL="your-alert-email"

# Security & Rate Limiting
RATE_LIMIT_WINDOW="60000"
RATE_LIMIT_MAX_REQUESTS="100"
WEBHOOK_SECRET="your-webhook-secret"

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="true"
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"

# Logging
LOG_LEVEL="info"

# Deployment
VERCEL_GIT_COMMIT_SHA="auto"
VERCEL_GIT_COMMIT_MESSAGE="auto"
VERCEL_GIT_COMMIT_AUTHOR_NAME="auto"