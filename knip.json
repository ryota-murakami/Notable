{
  "entry": [
    "packages/*/app/**/*.{ts,tsx}",
    "packages/mobile/app/**/*.tsx",
    "packages/web/middleware.ts"
  ],
  "project": ["packages/**/*.{ts,tsx,js,jsx}"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/.expo/**",
    "**/coverage/**",
    "packages/configs/**",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/tests/**",
    "**/__tests__/**",
    "**/e2e/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "eslint*",
    "prettier*",
    "husky",
    "lint-staged",
    "turbo"
  ],
  "jest": false,
  "next": false
}
