{
  "name": "notable-monorepo",
  "version": "1.0.0",
  "description": "A premium Notion clone with superior writing experience - Monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "e2e": "turbo e2e",
    "dev": "turbo dev",
    "clean": "turbo clean && rm -rf node_modules pnpm-lock.yaml",
    "prepare": "husky",
    "prettier": "prettier --ignore-unknown --write .",
    "knip": "knip"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "knip": "5.40.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "volta": {
    "node": "24.4.1"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "pnpm": {
    "overrides": {
      "napi-postinstall": "0.3.2"
    }
  }
}
