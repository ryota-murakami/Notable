{
  "name": "notable-monorepo",
  "version": "1.0.0",
  "description": "A premium Notion clone with superior writing experience - Monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "e2e": "turbo e2e",
    "dev": "turbo dev",
    "clean": "turbo clean && rm -rf node_modules pnpm-lock.yaml",
    "prepare": "husky",
    "prettier": "prettier --ignore-unknown --write .",
    "sherif": "pnpm dlx sherif -r unsync-similar-dependencies",
    "sherif:fix": "pnpm run sherif --fix -r unsync-similar-dependencies",
    "knip": "knip"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "knip": "5.40.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "volta": {
    "node": "22.17.1"
  },
  "lint-staged": {
    "packages/web/**/*.{js,ts,jsx,tsx,cjs,mjs}": [
      "pnpm --filter @notable/web lint:fix --no-error-on-unmatched-pattern"
    ],
    "packages/mobile/**/*.{js,ts,jsx,tsx,cjs,mjs}": [
      "pnpm --filter @notable/mobile lint:fix --no-error-on-unmatched-pattern"
    ],
    "packages/electron/**/*.{js,ts,jsx,tsx,cjs,mjs}": [
      "pnpm --filter @notable/electron lint:fix --no-error-on-unmatched-pattern"
    ],
    "packages/mobile/**/*.{ts,tsx}": [
      "pnpm --filter @notable/mobile typecheck"
    ],
    "packages/electron/**/*.{ts,tsx}": [
      "pnpm --filter @notable/electron typecheck"
    ],
    "*": "prettier --ignore-unknown --write"
  },
  "pnpm": {
    "overrides": {
      "napi-postinstall": "0.3.2"
    }
  }
}
